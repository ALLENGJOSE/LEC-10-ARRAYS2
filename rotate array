 public static void rotate(int[] arr, int d) {
    	//Your code goes here
         int j=1;
        while(j<=d){
            int temp = arr[0];
            int i;                              
            for(i=0;i<arr.length-1;i++){
                arr[i] = arr[i+1];
            }
           arr[i-1]=arr[i];
           arr[i]= temp;
           j++;
        }
        

    }
